<div class="container">
  <div class="row mt-5">
    <h2>Mon tableau de bord</h2>
  </div>
  <div class="row mt-5">
    <h3>Mes invitations</h3>
    <div class="col-3">
      <div class="card invitation mt-2">
        <div class="card-body">
          <p class="text-center pb-4" style="font-weight: 550;">Réponses attendues</p>
          <div>
            <% @participations.each do |participation| %>
              <% if participation.participating == nil %>
                <div class="row">
                  <div class="col-8">
                    <p class="pb-4" style="text-transform: capitalize; font-size: 14px;"><%= link_to participation.event.title, event_path(participation.event) %></p>
                  </div>
                  <div class="col-4">
                    <div class="button_box d-flex justify-content-end">
                        <%= link_to confirm_participation_path(participation), data: { turbo_method: :patch } do %>
                          <i class="fa-regular fa-circle-check"></i>
                        <% end %>
                        <%= link_to decline_participation_path(participation), data: { turbo_method: :patch } do %>
                          <i class="fa-regular fa-circle-xmark"></i>
                        <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-5">
    <h3>Mes évènements</h3>
  </div>
</div>
 <div class="container">
    <div class="dashboard_grid">
      <div class="section">
        <h3> Les events que j'ai créé </h3>
            <% @my_events.each do |event| %>
          <div class="created_event_card_basic">
              <div class="img_container"></div>
              <p><%=link_to event.title, event_path(event), class: "p-card"%></p>
              <p><%=event.location %></p>
              <p><%=event.date %></p>
              <p><%=event.description %></p>
              <div class="edit-link-container">
              <a href="#"><i class="fa-solid fa-pencil"></i></a>
              </div>
              <div class="delete-link-container">
                <a href="#"><i class="fa-solid fa-trash"></i></a>
              </div>
              <div class="review-link-container">
              <% if DateTime.now > event.date %>
                <%=link_to new_event_review_path(event) do %>
                  <i class="fa-regular fa-pen-to-square"></i>
                <% end %>
              <% end %>
              </div>
          </div>
          <% end %>
      </div>
