
<div class="container text-center custom-container">
  <h2>Ajoutez une tâche à l'évènement <%= @event.title %></h2>
  <%= simple_form_for [@event, @task], html: { class: 'row' } do |f| %>
    <div class="col-4 mb-3">
      <%= f.input :description, label: false, placeholder: 'Description',  input_html: { class: 'form-input' } %>
    </div>
    <div class="col-4 mb-3">
      <%= f.input :cost, label: false, placeholder: 'Coût', input_html: { class: 'form-input' }  %>
    </div>
    <div class="col-4 mb-3">
      <%= f.association :user, collection:@users, label: false, prompt: "Sélectionne un responsable", input_html: { class: 'form-input user-select' }  %>
       <div id="user-initials"></div> <!-- Élément pour afficher les initiales -->
    </div>
    <div class="col-6 mb-2 mx-auto">
      <%= f.submit 'Ajoutez une autre tâche', class: 'button-basic' %>
      <%= link_to "Etape suivante", event_path(@event), class: 'button-basic' %>
    </div>
  <% end %>
</div>
